<!DOCTYPE html>
<html lang="en">
<style>
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  .container {
    background-color: black
  }

  .flexbox {
    width: 80%;
    display: flex;
    justify-content: space-between;
    margin: 0 auto;
    letter-spacing: 1px;
    padding: 1% 0;
  }

  .flexbox div {
    font-weight: 700;
    color: white;
    letter-spacing: 2px;
    text-transform: uppercase;
    font-size: 1.5rem;
  }

</style>

<head>
  <title>TinyApp</title>
</head>

<header>
  <div class="container">
    <div class="flexbox">
      <div id="head-left">Tiny App</div>
    </div>
  </div>

<% if (typeof username != 'undefined' ) { %>
  <div class="test">
    <form method="POST" action="/logout">
      <input id="logout" name="logout" type="submit" value="Logout" />
    </form>
  </div>
<% } %>

</header>

</html>